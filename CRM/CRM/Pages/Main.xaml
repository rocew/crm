<Page x:Class="CRM.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#1C1C1C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#2D2D2F" Grid.Column="1">
            <Border BorderBrush="#39393B" BorderThickness="2,2,2,0" Margin="10,10,10,0" >
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="parent"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
